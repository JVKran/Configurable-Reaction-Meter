#ifndef __TIMER_HPP
#define __TIMER_HPP

#include <stdint.h>
#include <system.h>

#include <sys/alt_irq.h>
#include <altera_avalon_timer_regs.h>

class timer_c {
private:
	const uint32_t timer_base;
public:
	timer_c(const uint16_t timer_base):
		timer_base(timer_base)
{}
	void configure(const int microseconds);
};

#endif //__TIMER_HPP
